<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="saml_providers" name="Saml Providers">
        <!-- <t t-if="len(saml_providers) &gt; 0"> -->
        <t >  <!-- XXXXX  -->
            <p>====CCC===</p>
            
            <em t-attf-class="d-block text-center text-muted small my-#{len(saml_providers) if len(saml_providers) &lt; 3 else 3}">- or -</em>

            <div class="o_auth_saml_providers list-group mt-1 mb-1 text-left">
                <a t-foreach="saml_providers" t-as="p" class="list-group-item list-group-item-action py-2" t-att-href="p['auth_link']">
                    <i t-att-class="p['css_class']"/>
                    <t t-esc="p['body']"/>
                </a>
            </div>

        </t>
    </template>
    
    <template id="saml_login" inherit_id="web.login" name="SAML Login buttons">
        <xpath expr="//form" position="before">
            <p>====AAA===</p>
            <!-- <t t-set="form_small" t-value="True" t-if="len(saml_providers) &gt; 2"/> -->
        </xpath>
        <xpath expr="//div[hasclass('o_login_auth')]" position="inside">
            <p>===BBB====</p>
            <t t-call="auth_saml.saml_providers"/>
        </xpath>
    </template>
    
    <template id="saml_signup" inherit_id="auth_signup.signup" name="Saml Signup buttons">
        <xpath expr="//form" position="before">
            <t t-set="form_small" t-value="True"/>
        </xpath>
        <xpath expr="//div[hasclass('o_login_auth')]" position="inside">
            <t t-call="auth_saml.saml_providers"/>
        </xpath>
    </template>
    
    <template id="saml_reset_password" inherit_id="auth_signup.reset_password" name="Saml Reset Password buttons">
        <xpath expr="//div[hasclass('o_login_auth')]" position="inside">
            <t t-call="auth_saml.saml_providers"/>
        </xpath>
    </template>
    
</odoo>